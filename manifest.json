{
    "manifest_version": 3,
    "name": "Pomodoro",
    "description": "save your time and get things done faster",
    "version": "1.0.0",
    "icons": {
        "16": "./icons/circle-16.png",
        "32": "./icons/circle-32.png",
        "48": "./icons/circle-48.png",
        "128": "./icons/circle-128.png"
    },
    "action": {
        "default_icon": {
            "16": "./icons/circle-16.png",
            "32": "./icons/circle-32.png",
            "48": "./icons/circle-48.png",
            "128": "./icons/circle-128.png"
        }
    },
    "permissions": ["storage", "contextMenus", "alarms" , "notifications"],
    "background": {
        "service_worker": "service_worker.js"
    }
}